@model Crane.DATA.EF.Models.Beer

@{
    ViewData["Title"] = "Details";
}

<!-- Page Header Start -->
<div class="container-fluid page-header py-5 mb-5 wow fadeIn" data-wow-delay="0.1s">
    <div class="container text-center py-5">
        <h3 class="display-2 text-dark mb-4 animated slideInDown">@Model.BeerName</h3>
        <nav aria-label="breadcrumb animated slideInDown">
            <ol class="breadcrumb justify-content-center mb-0">
                <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Beers" class="btn btn-primary">Back to List</a></li>
                @*                <li class="breadcrumb-item text-dark" aria-current="page">@Model.BeerName Details</li>*@
            </ol>
        </nav>
    </div>
</div>
<!-- Page Header End -->

<div class="row mb-3">
    <div class="col-md-6 offset-md-3 text-center">
        <h2>@Model.BeerName</h2>
        <img src="~/img/Beer1.png" alt="" longdesc="" class="img-fluid" width="50%" />
        <h5 class="mt-3">
            @Html.DisplayFor(model => model.BeerDescription)
        </h5>
        <p>
            <strong>
                @Html.DisplayNameFor(model => model.BeerAbv) :
            </strong>
            @Html.DisplayFor(model => model.BeerAbv)
        </p>
        <p>
            <strong>
                @Html.DisplayNameFor(model => model.BeerType.BeerTypeName) :
            </strong>
            @Html.DisplayFor(model => model.BeerType.BeerTypeName)
        </p>
    <p>
        <strong>
            @Html.DisplayNameFor(model => model.IsOnTap) :
        </strong>
        @{
            string lineText = Model.IsOnTap ? "Yes" : "No";
        }
        <span>@lineText</span>
    </p>

    @if (User.IsInRole("Admin"))
    {
        <p>
            <strong>
                @Html.DisplayNameFor(model => model.IsCurrent) :
            </strong>
            @{
                string lineText2 = Model.IsCurrent ? "Yes" : "No";
            }
            <span>@lineText2</span>
        </p>
    }
    </div>

        
</div>

